/* components/custom-header/custom-header.wxss */

.custom_header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9999;
  background: transparent;
}

.custom_posi {
  position: absolute; 
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-start
}

.custom_posi_bg {
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  background: rgba(0, 0, 0, 0.1);
  justify-content: center
}

.custom_posi .v-icon {
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 15rpx;
  padding-right: 15rpx;
}

.custom_posi .v-icon icon {
  font-size: 24px;
  color: #fff
}

.custom_posi .v-line {
  width: 1px;
  height: 32rpx;
  background: rgba(255, 255, 255, 0.3);
  margin-right: 8rpx;
  margin-left: 8rpx;
}

.custom_title {
  position: absolute; 
  background: transparent;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  color: #fff;
  font-weight: 600;
}