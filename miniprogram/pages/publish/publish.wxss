/* pages/publish/publish.wxss */
.form_wrap {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}

.form_box {
  margin-bottom: 20rpx;
}

.form_box input {
  width: 100%;
  height: 68rpx;
  box-sizing: border-box;
  border: 1px solid #ddd;
  font-size: 24rpx;
  color: #333;
  padding: 0 10rpx;
}

.form_box textarea {
  width: 100%;
  box-sizing: border-box;
  border: 1px solid #ddd;
  font-size: 24rpx;
  line-height: 36rpx;
  height: 204rpx;
  color: #333;
  padding: 10rpx;
  background: #f6f6f6;
}

.form_pic {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.form_pic .up_pic {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.form_pic .up_pic .img {
  display: block;
  width: 150rpx;
  height: 150rpx;
}

.form_pic .up_pic .close {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  display: block;
  width: 36rpx;
  height: 36rpx;
}


.form_pic .up_pic .icon {
  display: block;
  width: 60rpx;
  height: 60rpx;
}
.form_pic .up_pic text {
  margin-top: 10rpx;
  font-size: 20rpx;
  color: #888;
}




.form_btn {
  text-align: center;
}

.form_btn text {
  display: block;
  width: 100%;
  height: 68rpx;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  text-align: center;
  line-height: 68rpx;
  background: #1ab16c;
  border-radius: 8rpx;
}